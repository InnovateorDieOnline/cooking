<% include layoutTop %>

<div class="row">

  <div class="twelve columns">
    <% if(!title) {
      var title = "All Recipes"; 
    } %>

    <form name="input", action="/recipe/new", method="post">
      <h3><%= title %> <input type="submit" class="button" name = "save" value="New" />
      </h3>
    </form>

  </div>

</div>

<% for(r = 0; r < recipes.length; r++) { %>
  
  <% var recipe = recipes[r] %>

  <div class="row">
    <div class="eight columns">
      <p>
        <% if(recipe.isStarred) { %> 
          <span>(*)</span> 
        <% } else { %>
          <span>(o)</span>
        <% } %> 

        <% if(recipe.isShoppingList) { %> 
          <span>($)</span> 
        <% } else { %>
          <span>(-)</span>
        <% } %> 

        <a href="<%= recipe.link %>"><%= recipe.name %></a>
      </p>
    </div>
  </div>

<% } %>

<% include layoutBottom %>
